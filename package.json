{
  "name": "comp1537a3",
  "type": "module",
  "scripts": {
    "build:watch:html": "pug -o ./public ./src/client/index.pug --pretty --watch",
    "build:watch:css": "sass --no-source-map ./src/client/styles/styles.scss:./public/styles/styles.css --watch",
    "build:watch:client-js": "tsc -p tsconfig.client.json --rootDir src/client --outDir ./public --watch",
    "build:watch:server-js": "tsc -p tsconfig.server.json --rootDir src/server --outDir ./build --watch",
    "serve": "nodemon -r dotenv/config -w build/ -w config/ ./build/index.js --ext js,json",
    "clean": "rimraf public/ build/",
    "build": "npm-run-all clean -p build:watch:*",
    "start": "npm-run-all serve"
  },
  "devDependencies": {
    "@types/config": "^0.0.41",
    "@types/express": "^4.17.13",
    "@types/jquery": "^3.5.14",
    "@types/morgan": "^1.9.3",
    "dotenv": "^16.0.0",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "pug-cli": "^1.0.0-alpha6",
    "rimraf": "^3.0.2",
    "sass": "^1.49.7",
    "typescript": "^4.7.0-dev.20220408"
  },
  "dependencies": {
    "body-parser": "^1.20.0",
    "config": "^3.3.7",
    "express": "^4.17.3",
    "helmet": "^5.0.2",
    "mongoose": "^6.2.10",
    "morgan": "^1.10.0"
  }
}
